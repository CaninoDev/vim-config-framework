{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    },
    "cquery": {
      "command": "cquery",
      "args": ["--log-file=/tmp/cq.log"],
      // disable automatic reveal output channel
      "revealOutputChannelOn": "never",
      "filetypes": ["c", "cpp"],
      "initializationOptions": {
        "cacheDirectory": "/tmp/cquery"
      }
    }
  },
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.jumpCommand": "vsp",
  "coc.preferences.rootPatterns": [".git", ".hg", "pyproject.toml", "setup.py", "package.json", ".venv", ".env"],
  "diagnostic.locationlist": false,
  "coc.preferences.formatOnSaveFiletypes": ["python"],
  "coc.source.tmuxcomplete.filetypes": ["python"],
  "coc.source.buffer.enable": false,
  // Disable linting (using ALE)
  "tsserver.enableJavascript": false,
  "eslint.enable": false,
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false
}
